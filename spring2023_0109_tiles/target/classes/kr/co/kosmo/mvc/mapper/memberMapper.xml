<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

  <mapper namespace="member">
  <insert id="add" parameterType="mvo">
  insert into member values(member_seq.nextVal,#{id},#{pwd},#{name},#{age},#{gender},sysdate)
  </insert>
  
  <select id="idchk" parameterType="String" resultType="int">
  select count(*) from member where id=#{id}
  </select>
  
  <select id="login" parameterType="mvo" resultType="mvo">
  select id, name from member where id=#{id} AND pwd=#{pwd}
  </select>
  
  <!--  login loggin mapper -->
  <!-- idn 로그인한 시점과 로그아웃한 시점 uagent 사용자 디바이스, status 상태 -->
  <insert id="logger_in" parameterType="lvo">
	insert into myloginlog values(myloginlog_seq.nextVal,#{idn},#{reip},#{uagent},#{status},sysdate)
  </insert>
  
  </mapper>